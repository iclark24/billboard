<h1><%= @board.name %></h1>
<table class="ui striped table">
  <thead>
    <tr class="center aligned">
      <th colspan="4"></th>
    </tr>
  </thead>
  
  <tbody>
    <% for songs in @board do |song| %>
      <tr class="center aligned">
        <td>
        <%= song.name %>
        </td>
        <td><%= link_to "Songs", board_song_path(song) %></td>
        <td><%= link_to "Edit", edit_board_song_path(@board, song) %></td>
        <td><%= link_to "Destroy", board_song_path(@board, song), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />
<%= link_to "New Song", new_board_song_path(@board) %>
<br />
<%= link_to "Back", boards_path %>